<style>
  .capturaOC {
    display: none;
  }


  .capturaOCImgs {
    display: none;
  }

  #tablaOCs {
    text-transform: uppercase;
  }

  .selectize-input {
    font-size: 32px;
    line-height: 32px;
    width: 30%
  }

  .selectize-dropdown {
    font-size: 28px;
    line-height: 28px;
  }

  .oculta {
    position: relative;
    bottom: 42px;
    transform: translate(0, 100%);
    transition: 0.5s;
  }

  .visible {
    position: relative;
    bottom: 0px;
    transform: translate(0, 0%);
    transition: 0.5s;
  }

  .selectedSerie {
    background-color: navajowhite !important;
  }

  .switch {
    position: relative;
    display: inline-block;
    width: 90px;
    height: 34px;
    left: 1em;
    top: 0.5em;
  }

    .switch input {
      display: none;
    }

  .slider {
    position: absolute;
    cursor: pointer;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-color: #334f8c;
    -webkit-transition: .4s;
    transition: .4s;
  }

    .slider:before {
      position: absolute;
      content: "";
      height: 26px;
      width: 26px;
      left: 4px;
      bottom: 4px;
      background-color: white;
      -webkit-transition: .4s;
      transition: .4s;
    }

  input:checked + .slider {
    background-color: #1cacd4;
  }

  input:focus + .slider {
    box-shadow: 0 0 1px #2196F3;
  }

  input:checked + .slider:before {
    -webkit-transform: translateX(55px);
    -ms-transform: translateX(55px);
    transform: translateX(55px);
  }

  .on {
    display: none;
  }

  .on, .off {
    color: white;
    position: absolute;
    transform: translate(-50%,-50%);
    top: 50%;
    left: 50%;
    font-size: 10px;
    font-family: Verdana, sans-serif;
  }

  input:checked + .slider .on {
    display: block;
  }

  input:checked + .slider .off {
    display: none;
  }

  .slider.round {
    border-radius: 34px;
  }

    .slider.round:before {
      border-radius: 50%;
    }
</style>
