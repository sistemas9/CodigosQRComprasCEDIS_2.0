
@{
    ViewData["Title"] = "Carrusel";
}

<div id="carrusel" class="carousel slide" data-interval="false" style="position: absolute;transform: translate(50%,0);">
    <ol class="carousel-indicators">
        @*<li data-target="#carrusel" data-slide-to="' + count + '" class="' + active + '"></li> ';*@
    </ol>
    <div class="carousel-inner">
        @{
            String active = "active";
            int count = 0;
            foreach (var item in ViewBag.images)
            {
                String rutaImg = @ViewBag.rutaImg +@item.path;
                <div class="carousel-item @active">
                    <img src="@rutaImg" class="d-block w-100" style="width:800px !important;height:800px !important" alt="Imagen Linea">
                    <div class="carousel-caption d-none d-md-block" style="padding-top: 0px;padding-bottom: 15px;">
                        @*<span style="font-size:10px;">Imagen @(count + 1) Linea</span><br />
                          <span style="font-size:10px;">Capture Comentario</span>
                          <input type="text" class="comentImgGen" data-nombre="@item.nombre" id="Imagen@(count + 1)" style="width:100%;" value="@item.comentario" />*@
                    </div>
                </div>
                active = "";
                count++;
            }
        }
    </div>
</div>
<a class="carousel-control-prev" href="#carrusel" role="button" data-slide="prev" style="background-color:forestgreen;">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
</a>
<a class="carousel-control-next" href="#carrusel" role="button" data-slide="next" style="background-color:forestgreen;">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
</a>